<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="voltar"
    tools:context=".Dados">

    <TextView
        android:id="@+id/tvPrecoApagar"
        android:layout_width="216dp"
        android:layout_height="27dp"
        android:layout_marginTop="50dp"
        android:text="PreÃ§o"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvNomeApagar"
        app:layout_constraintStart_toStartOf="@+id/tvNomeApagar"
        app:layout_constraintTop_toBottomOf="@+id/tvNomeApagar" />


    <TextView
        android:id="@+id/tvNomeApagar"
        android:layout_width="224dp"
        android:layout_height="36dp"
        android:layout_marginStart="158dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="158dp"
        android:text="Nome"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/tvCategoriaApagar"
        android:layout_width="229dp"
        android:layout_height="28dp"
        android:layout_marginTop="136dp"
        android:text="Categoria"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvPrecoApagar"
        app:layout_constraintHorizontal_bias="0.692"
        app:layout_constraintStart_toStartOf="@+id/tvPrecoApagar"
        app:layout_constraintTop_toBottomOf="@+id/tvNomeApagar" />

    <Button
        android:id="@+id/btnApagar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:onClick="apagarContato"
        android:text="Apagar item"
        app:layout_constraintBottom_toTopOf="@+id/button10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button10"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnApagar"
        app:layout_constraintStart_toStartOf="@+id/btnApagar" />

    <TextView
        android:id="@+id/tvIdApagar"
        android:layout_width="226dp"
        android:layout_height="22dp"
        android:layout_marginTop="36dp"
        android:text="ID"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvCategoriaApagar"
        app:layout_constraintStart_toStartOf="@+id/tvCategoriaApagar"
        app:layout_constraintTop_toBottomOf="@+id/tvCategoriaApagar" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150sp"
        android:layout_height="150dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="131dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />


</androidx.constraintlayout.widget.ConstraintLayout>

